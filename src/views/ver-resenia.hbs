            </p>
            <br>
          </div>
          <div class="div_dis-likes_c">
            <a href="">
              <i class="fas fa-thumbs-up text-white fa-lg mr-3"></i>
            </a>
            <a href="">
              <i class="fas fa-thumbs-down text-white fa-lg"></i>
            </a>
          </div>
        </div>
      </div>
      {{!-- {{/each}} --}}
      {{#if user}}
      <form action="" method="POST">
        <div class="div_textarea-comentario">
          <textarea class="form-control" name="comentario" cols="125" rows="6" placeholder="Ingrese aquí su comentario"></textarea>
        </div>

        <div class="boton_comentar">
          <button class="btn btn-sm btn-info btn-block btn-blue-grey boton_comentar_resenia my-3" type="submit">
            Comentar
          </button>
        </div>
      </form>
      {{/if}}

    </div>
    
